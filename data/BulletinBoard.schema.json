{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "projects": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "properties": {
            "id": {
              "type": "string"
            },
            "hash": {
              "type": "string"
            },
            "title": {
              "type": "string"
            },
            "description": {
              "type": "string"
            },
            "milestiones": {
              "type": "array",
              "items": [
                {
                  "type": "object",
                  "properties": {
                    "duration": {
                      "type": "string"
                    },
                    "cost": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "duration",
                    "cost"
                  ]
                }
              ]
            },
            "investmentDuration": {
              "type": "string"
            },
            "owner": {
              "type": "string"
            }
          },
          "required": [
            "id",
            "hash",
            "title",
            "description",
            "milestiones",
            "investmentDuration",
            "owner"
          ]
        }
      ]
    }
  },
  "required": [
    "projects"
  ]
}